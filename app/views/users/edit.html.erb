      <div class="main">
         <div class="col-md-6 col-sm-12">
            <div class="login-form">
               <div class="form-group">
                  <h1 align="center">EDIT ACCOUNT</h1>
                    <%= form_for @user do |f| %>
                        <%= f.label :NAME %>
                        <%= f.text_field :name, class: "form-control", placeholder: "ENTER NAME", autofocus: true %>
                        <%= f.label :AGE%>
                        <%= f.text_field :age, class: "form-control", placeholder: "ENTER AGE", autofocus: true %>
                        <%= f.label :USERNAME %>
                       <%= f.text_field :username, class: "form-control", placeholder: "PREFERRED USERNAME", autofocus: true %>
                        <%= f.label :PASSWORD %>
                        <%= f.password_field :password, class: "form-control", placeholder: "PREFERRED PASSWORD", autofocus: true %>
                        <%= f.label :"Confirm Password" %>
                        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "PREFERRED PASSWORD", autofocus: true %>
                      <button class= "button1" type='submit'>Edit Account</button>
                  <%end %>
             </div>
         </div>
      </div>
 </div>

