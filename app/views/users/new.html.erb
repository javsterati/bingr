<h1>CREATE ACCOUNT NOW  </h1>

    <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |message|%>
        <h3><%= message %>  </h3>
        <%end%>
    <%end%>

    </br>

    <%= form_for @user do |f| %>
        <%= f.label :NAME %>
        <%= f.text_field :name %>
        <%= f.label :AGE%>
        <%= f.text_field :age%>
        <%= f.label :USERNAME %>
        <%= f.text_field :username %>
        <%= f.label :PASSWORD %>
        <%= f.password_field :password%>
        <%= f.label :"Confirm Password" %>
        <%= f.password_field :password_confirmation%>
        </br>
        <%= f.submit "SUBMIT"%>
<% end %>